<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/theomen"
    tools:context="com.example.lisbeth.rest.Update">
    <EditText
        android:id="@+id/editText01"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="22dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:layout_above="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="21dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:layout_above="@+id/editText5"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:hint="Cell Number"
        android:layout_above="@+id/spin"
        android:layout_alignRight="@+id/spin"
        android:layout_alignEnd="@+id/spin"
        android:layout_marginBottom="30dp" />

    <Spinner
        android:layout_width="340dp"
        android:layout_height="54dp"
        android:id="@+id/spin"
        android:entries="@array/Choose"
        android:layout_above="@+id/btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:text="Update"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText01"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText01"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:text="TextView" />

</RelativeLayout>
